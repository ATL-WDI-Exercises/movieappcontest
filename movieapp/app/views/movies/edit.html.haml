- if @movie.user_id == current_user.id
  %h1 Edit A Movie!

  = form_for @movie do |m|
    = m.label :title
    = m.text_field :title
    %br/
    = m.label :genre
    = m.text_field :genre
    %br/
    = m.label :year
    = m.text_field :year
    %br/
    = m.label :synopsis
    = m.text_field :synopsis
    %br/
    = m.label :pic_url
    = m.text_field :pic_url
    %br/
    = m.submit
- else
  .jumbotron
    %h1 Access Denied
    %h2 Can't hack this
    = image_tag "https://vaminidotworpressdotcomdotorg.files.wordpress.com/2013/05/hammertime-o.gif"
